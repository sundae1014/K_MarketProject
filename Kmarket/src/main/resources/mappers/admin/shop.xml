<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.kmarket.mapper.admin.ShopMapper">
    <select id="findAll" resultType="kr.co.kmarket.dto.MemberDTO">
        SELECT *
        FROM MEMBER
        WHERE AUTH = 3
    </select>

    <update id="update">
        UPDATE MEMBER
        SET OPERATION = #{operation}
        WHERE CUST_NUMBER = #{custNumber}
    </update>
</mapper>